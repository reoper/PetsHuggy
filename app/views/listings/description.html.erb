<%= render 'partial/navbar' %>

<div class="container">
    <div class="col-md-3">
        <!-- verticalnavbar -->
        <%= render 'partial/verticalnavbar' %>
    </div>

    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-center">
                    <span class="panel-heading-title">リスティング内容の編集</span>
                </div>
            </div>

            <div class="panel-body">

                <%= form_for @listing do |f| %>

                    <div class="row">
                        <div class="col-md-12 select">
                            <div class="form-group">
                                <label>タイトル</label>
                                <%=
                                    f.text_field :listing_title,
                                    placeholder: "リスティングタイトルを入力しましょう",
                                    class: 'form-control'
                                %>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <div class="col-md-12 select">
                            <div class="form-group">
                                <label>タイトル</label>
                                <%=
                                    f.text_area :listing_content,
                                    rows: 8,
                                    placeholder: "リスティングの内容を入力しましょう",
                                    class: 'form-control'
                                %>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="action">
                        <%= f.submit "更新", class: "btn btn-danger" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>