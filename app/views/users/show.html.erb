    // email
    <% if !@user.email.blank? %>
        document.getElementById('ver-email').classList.add('vertification-checked');
    <% end %>
    // tel
    <% if !@user.phone_number.blank? %>
        document.getElementById('ver-tel').classList.add('vertification-checked');
    <% end %>
    // facebook login
    <% if @user.provider == "facebook" %>
        document.getElementById('ver-facebook').classList.add('vertification-checked');
    <% end %>

</script>
